.goodsItem{
  width: 100%;
  display: flex;

  &>div{
    flex: 1;
    p{
      margin-top: 0;
    }
  }
}

.wrap{
  display: flex;
  justify-content: space-between;
}

.goodsSKUSimple{
  display: flex;
  height: 56rem;
  align-items: center;
  &>div{
    flex: 1;
    justify-content: flex-end;
  }
  .wrap{
    span{
      text-align: center;
    }
  }

  .active{
    
  }
}

.BigBtn{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 48rem;
  line-height: 48rem;
  font-size: 18rem;
  background-color: #f39800;
  color: #fff;
  text-align: center;
  text-decoration: none;
}

.goodsItemFlat{
  display: flex;
  .goodsWrap{
    text-align: center;
    display: flex;
    flex: 1;
    order: 2;
  }
  img{
    flex: 1;
  }
  .tag001{
    background-color: #f60;
  }
  .title{
    width: 100%;
  }
  .level{
    align-items: center;
    flex-direction: row;
  }
  .vertical{
    justify-content: center;
    flex-direction: column;
  }
  .front{
    order: 0;
    & + .split{
      order: 1
    }
  }
  .end{
    order: 4;
    & + .split{
      order: 3
    }
  }
}

.detailStaticWrap{
  &>div{
    overflow: hidden;
  }
}