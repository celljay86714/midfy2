@import 'styleguide';

.root{
  height: 100%;
  position: relative;

  &.scrollwrap{
    overflow: auto;
    -webkit-overflow-scrolling: touch;
  }
  .rootwrap{
    height: calc(100% - 4rem);
    overflow: auto;
    -webkit-overflow-scrolling: touch;
  }

  .banner{
    width: 100%;
    height: 14.83333rem;
  }
  .goodsList{
    a{
      text-decoration: none;
    }
    .goodsItemFlat{
      padding: 1.33333rem;
      box-sizing: border-box;
      border-bottom: 1px solid $IOSborderColor;
      :global(.split){
        width: 1.33333rem;
      }
      :global(.titleComp){
        font-size: 1.66667rem;
      }
      :global(.textComp){
        margin-top: 0.33333rem;
        margin-bottom: 0.66667rem;
        line-height: 1.66667rem;
        font-size: 1rem;
        color: $subFrontBgColor;
      }
      :global(.price){
        font-size: 1.5rem;
        color: $mainColor;
      }
      :global(.sign){
        font-size: 1rem;
        color: $subFrontBgColor;
      }
      :global(.wrap){
        align-items: flex-end;
      }
      img{
        width: 13.66667rem;
        height: 13.66667rem;
      }
    }
  }
}

.info{
  height: 100%;
  .banner{
    width: 100%;
    height: 14.83333rem;;
  }
  .goodsInfoFlat{
    background-color: #fff;
    margin-bottom: 0.66667rem;
    padding: 0 1.33333rem 2rem;
    :global(.titleComp){
      font-size: 1.66667rem;
    }
    :global(.textComp){
      margin-top: 0.33333rem;
      margin-bottom: 0.66667rem;
      line-height: 1.66667rem;
      font-size: 1.16667rem;
      color: $subFrontBgColor;
    }
    :global(.price){
      font-size: 1.66667rem;
      color: $mainColor;
    }
  }
}

// Counter Component style
:global(.counter){
  float: right;
  a{
    &:first-child{
      border-radius: 0.16667rem 0 0 0.16667rem;
    }
    &:last-child{
      border-radius: 0 0.16667rem 0.16667rem 0;
    }
    height: 2.75rem;
    width: 2.75rem;
    line-height: 2.5rem;
    background-color: $subBgColor;
    border: 1px solid $subFrontBgColor;
    &:active{
      color: #fff;
      background-color: $mainColor;
      border-color: $mainColor;
    }
  }
  input{
    box-shadow: none;
    border-radius: 0;
    padding: 0;
    border-width: 1px 0;
    border-style: solid;
    border-color: $subFrontBgColor;
    height: 2.75rem;
    text-align: center;
    width: 4.4rem; 
  }
}

:global(.detailStaticWrap){
  background-color: #fff;
  padding: 2rem 1.33333rem;
  margin-bottom: 0.66667rem;
  :global(.titleComp){
    text-align: center;
    span{
      font-size: 1.33333rem;
      padding-bottom: 0.33333rem;
      border-bottom: 0.16667rem solid $mainColor;
    }
    margin-bottom: 0.16667rem;
  }
}

.order{
  .detail{
    padding: 1.33333rem;
    background-color: #fff;
  }
  .goodsSKU{
    border-top: 1px solid $IOSborderColor;
    padding-left: 1.33333rem;
    padding-right: 1.33333rem;
    background-color: #fff;

    :global(.wrap){
      span{
        height: 1.66667rem;
        padding-left: 1rem;
        padding-right: 1rem;
        border-radius: 0.16667rem;
        line-height: 1.66667rem;
        background-color: $subBgColor;
        color: $therdFontColor;
        margin-left: 0.66667rem;
      }
      :global(.active){
        color: #fff;
        background-color: $mainColor;
      }
    }
  }
  :global(.itemIOS){
    height: 4.66667rem;
    padding-left: 1.33333rem;
    padding-right: 1.33333rem;
  }
  .weixin{
    div>span{
      color: $therdFontColor;
    }
  }
  .total{
    border-bottom: 1px solid $IOSborderColor;
    div>span{
      font-size: 1.5rem;
      color: $mainColor;
    }
  }
  .fare{
    div>span:first-child{
      text-decoration: line-through;
      color: $therdFontColor;
      margin-right: 10rem;
    }
  }
  .address{
    padding: 1.66667rem 1.33333rem;
    border-top: 1px solid $IOSborderColor;
    background-color: #fff;
    font-size: 1.16667rem;
    line-height: 1.4;
    .phone{
      float: right;
    }
    p{
      margin-top: 0.66667rem;
      margin-bottom: 0;
    }
  }
  :global(.goodsItem){
    img{
      width: 6rem;
      height: 6rem;
      margin-right: 1.33333rem;
    }
    :global(.title){
      font-size: 1.16667rem;
    }
    :global(.text){
      color: $subFrontBgColor;
      margin-top: 0.33333rem;
      margin-bottom: 0.33333rem;
      font-size: 1rem;
    }
    :global(.price){
      font-size: 1.33333rem;
      color: $mainColor;
    }
    :global(.sign){
      color: $subFrontBgColor;
      font-size: 1rem;
    }
  }
  :global(.itemIOSLink){
    padding: 1.66667rem 1.33333rem;
    border-top: 1px solid $IOSborderColor;
    background-color: #fff;
    font-size: 1.16667rem;
    line-height: 1.4;
    text-decoration: none;
    &:active{
      background-color: #f0f0f0;
    }
    .phone{
      float: right;
    }
    p{
      margin-top: 0.66667rem;
      margin-bottom: 0;
      word-break: break-all;
    }
    :global(.squareArrow){
      width: 36rem;
      i{
        border-top-color: $therdFontColor;
      }
    }
  }
}

.address{
  padding-top: 1.33333rem;
  .itemList{
    border-top: 1px solid $IOSborderColor;
    border-bottom: 1px solid $IOSborderColor;
    padding-left: 1.33333rem;
    background-color: #fff;
    & + p{
      margin-top: 0;
      margin-bottom: 0;
      padding: 1.33333rem;
      font-size: 1.16667rem;
      color: $therdFontColor;
    }
  }
  :global(.itemIOS){
    border-top: 1px solid $IOSborderColor;
    padding: 1.33333rem 1.33333rem 1.33333rem 0;
    &:first-child{
      border-top: 0;
    }
    span{
      color: $therdFontColor;
    }
  }
}

:global(.goodsSKUSimple){
  height: 4.66667rem;
}
:global(.BigBtn){
  height: 4rem;
  line-height: 4rem;
  font-size: 1.5rem;
}
:global(.itemIOSLink){
  :global(.arrow){
    width: 2rem;
  }
}