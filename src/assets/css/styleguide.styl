// ==============================================================
// 去掉移动端可点击元素在点击是的半透明背景
tap0hightlight{-webkit-tap-highlight-color: rgba(0,0,0,0)}

:global(.easeDown-enter){
  opacity: 0.01;
}
:global(.easeDown-enter.easeDown-enter-active){
  opacity: 1;
  transition: opacity 500ms ease-in;
}
:global(.easeDown-leave){
  opacity: 1;
}
:global(.easeDown-leave.easeDown-leave-active){
  opacity: 0.01;
  transition: opacity 300ms ease-in;
}

@import '../../../node_modules/normalize.css/normalize.css';

body{
  font-size: 16rem;
  user-select: none; 
  font-family: "Myriad Set Pro", "Helvetica Neue", Helvetica, Arial, sans-serif;
  background-color: $mainBgColor;
  color: $mainFontColor;
  outline: none;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
}
a{
  outline: none;
  color: $mainFontColor;
}

